{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "strict": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts", "server/**/*"],
  "references": [{ "path": "./shared" }]
}